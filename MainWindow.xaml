<Window x:Class="WifiScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WifiScanner.ViewModels"
        Title="Wifi Scanner" Height="400" Width="600">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <Button Content="Сканировать" Command="{Binding ScanCommand}" Width="100" Margin="10"/>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="10"/>
            <TextBox Text="{Binding BestNetwork}" Width="200" Margin="10"/>
            <DataGrid ItemsSource="{Binding WifiNetworks}" AutoGenerateColumns="False" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="SSID" Binding="{Binding SSID}" Width="*"/>
                    <DataGridTextColumn Header="Signal Strength (%)" Binding="{Binding SignalStrength}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>

